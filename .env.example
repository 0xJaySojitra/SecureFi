FTM_RPC_URL=https://rpcapi.fantom.network
ARBI_RPC_URL=https://arb1.arbitrum.io/rpc
GC_RPC_URL=https://xdai.poanetwork.dev
BSC_RPC_URL=https://bsc-dataseed.binance.org
MATIC_RPC_URL=https://rpc.ankr.com/polygon

# ============================================
# YieldDonating Strategy Deployment Configuration
# ============================================

# RPC Configuration
RPC_URL=https://eth-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_API_KEY
ETHERSCAN_API_KEY=YOUR_ETHERSCAN_API_KEY

# Deployment Configuration
PRIVATE_KEY=0x...  # Private key for deployment 

# ============================================
# Role Addresses (CRITICAL: Set these correctly)
# ============================================

# Admin role - Can manage roles and emergency functions
ADMIN_ADDRESS=0x1234567890123456789012345678901234567890

# Keeper role - Manages epoch advancement and strategy reports
KEEPER_ADDRESS=0x2345678901234567890123456789012345678901

# Management role - Can configure strategy parameters
MANAGEMENT_ADDRESS=0x3456789012345678901234567890123456789012

# Emergency Admin - Can shutdown strategy and recover funds
EMERGENCY_ADMIN_ADDRESS=0x4567890123456789012345678901234567890

# Cantina Operator - Can approve projects and submit bug reports
CANTINA_OPERATOR_ADDRESS=0x5678901234567890123456789012345678901

# ============================================
# Strategy Configuration
# ============================================

# Strategy name
STRATEGY_NAME="USDC Spark YieldDonating Strategy"

# Enable burning for loss protection (true/false)
ENABLE_BURNING=true

# ============================================
# Factory Configuration (Optional)
# ============================================

# If you want to use an existing factory, set this address
# Leave empty to deploy a new factory
FACTORY_ADDRESS=

# ============================================
# Network-Specific Addresses
# ============================================

# Mainnet addresses (default)
TEST_ASSET_ADDRESS=0xA0b86991c6218b36c1d19D4a2e9Eb0cE3606eB48  # USDC
TEST_YIELD_SOURCE=0x28B3a8fb53B741A8Fd78c0fb9A6B2393d896a43d   # Spark Vault

# Note: TokenizedStrategy implementation is deployed automatically by the factory
# No need to set TOKENIZED_STRATEGY_IMPLEMENTATION

# ============================================
# Deployment Options
# ============================================

# Gas configuration
GAS_LIMIT=5000000
GAS_PRICE=20000000000  # 20 gwei

# Verification
VERIFY_CONTRACTS=true

# ============================================
# Security Notes
# ============================================

# 1. NEVER commit private keys to version control
# 2. Use hardware wallets for production deployments
# 3. Verify all role addresses before deployment
# 4. Test on testnet before mainnet deployment
# 5. Ensure sufficient ETH for gas fees
# 6. Double-check all contract addresses

# ============================================
# Example Usage
# ============================================

# Deploy with factory:
# forge script script/DeployWithFactory.s.sol --rpc-url $RPC_URL --broadcast --verify

# Deploy without factory:
# forge script script/DeployYieldDonatingStrategy.s.sol --rpc-url $RPC_URL --broadcast --verify
